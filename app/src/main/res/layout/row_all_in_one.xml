<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cc_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:background="@drawable/cust_order_detail">

        <ImageView
            android:id="@+id/iv_display"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:layout_margin="@dimen/_8sdp" />

        <TextView
            android:id="@+id/idTVFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toEndOf="@id/iv_display"
            android:layout_toRightOf="@id/iv_display"
            android:fontFamily="@font/poppins_regular"
            android:text="First Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/idTVLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVFirstName"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toEndOf="@id/iv_display"
            android:layout_toRightOf="@id/iv_display"
            android:fontFamily="@font/poppins_regular"
            android:text="Last Name"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/idTVEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVLastName"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toEndOf="@id/iv_display"
            android:layout_toRightOf="@id/iv_display"
            android:fontFamily="@font/poppins_regular"
            android:text="Email"
            android:textColor="@color/silver"
            android:textSize="@dimen/_8sdp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>